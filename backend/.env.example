# ==========================================
# Peganyx SME Management System Configuration
# ==========================================

# --- APPLICATION SETTINGS ---
APP_NAME=Peganyx SME System
DEBUG=false
# Set to 'production' for live environments
ENVIRONMENT=production

# --- SECURITY (CRITICAL) ---
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=change_this_to_a_secure_random_string_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS CONFIGURATION ---
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://yourdomain.com

# --- DATABASE CONNECTION ---
POSTGRES_USER=sme_user
POSTGRES_PASSWORD=secure_db_password
POSTGRES_DB=sme_db
# 'db' is the hostname of the postgres service in docker-compose
POSTGRES_HOST=db
POSTGRES_PORT=5432
