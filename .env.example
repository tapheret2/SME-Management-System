# Environment Configuration (Example)
# Rename this file to .env and set your own values

# ======================
# Application Settings
# ======================
APP_NAME=SME Management System
DEBUG=false

# ======================
# Database Settings
# ======================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=sme_db
POSTGRES_USER=sme_user
POSTGRES_PASSWORD=change_this_to_a_secure_password

# ======================
# Authentication (JWT)
# ======================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change_this_to_a_secure_random_string_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# CORS
# ======================
CORS_ORIGINS=http://localhost:5173,http://localhost
